{
  "name": "mklnks",
  "description": "Create links as configured.",
  "version": "1.2.0",
  "author": {
    "name": "nujarum",
    "url": "https://github.com/nujarum"
  },
  "bin": {
    "mklnks": "./bin/cli.js"
  },
  "bugs": {
    "url": "https://github.com/nujarum/mklnks/issues"
  },
  "dependencies": {
    "chalk": "~5.0.1",
    "minimist": "~1.2.6",
    "resolve-esm": "~1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@types/jest": "^29.0.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=14"
  },
  "exports": {
    ".": {
      "types": "./types/main.d.ts",
      "import": "./dist/main.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "bin",
    "dist",
    "types/**/*.d.ts"
  ],
  "homepage": "https://github.com/nujarum/mklnks#readme",
  "imports": {
    "#@": "./package.json",
    "#*": "./dist/*.js"
  },
  "keywords": [
    "cli",
    "ecmascript",
    "esm",
    "hard",
    "hard link",
    "hardlink",
    "import.meta.resolve",
    "junction",
    "link",
    "mjs",
    "package.json",
    "require.resolve",
    "resolve",
    "symbolic",
    "symbolic link",
    "symlink"
  ],
  "license": "MIT",
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:nujarum/mklnks",
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf .cache bin dist test/.tmp types",
    "jest": "cross-env \"NODE_OPTIONS='--experimental-vm-modules --no-warnings'\" jest",
    "lint": "eslint . --cache --cache-file .cache/.eslintcache",
    "test": "concurrently npm:jest npm:lint"
  },
  "type": "module",
  "types": "./types/main.d.ts"
}
