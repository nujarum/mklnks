{
  "name": "mklnks",
  "description": "Create links as configured.",
  "version": "1.3.1",
  "author": {
    "name": "nujarum",
    "url": "https://github.com/nujarum"
  },
  "bin": {
    "mklnks": "./bin/cli.mjs"
  },
  "bugs": {
    "url": "https://github.com/nujarum/mklnks/issues"
  },
  "dependencies": {
    "chalk": "~5.3.0",
    "minimist": "~1.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/coverage-v8": "^0.34.3",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-ts": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "types": "./types/main.d.mts",
      "default": "./dist/main.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "bin",
    "dist",
    "types/**/*.d.mts"
  ],
  "homepage": "https://github.com/nujarum/mklnks#readme",
  "imports": {
    "#@": "./package.json",
    "#*": {
      "types": "./types/*.d.mts",
      "default": "./dist/*.mjs"
    }
  },
  "keywords": [
    "cli",
    "ecmascript",
    "esm",
    "hard",
    "hard link",
    "hardlink",
    "import.meta.resolve",
    "junction",
    "link",
    "mjs",
    "package.json",
    "require.resolve",
    "resolve",
    "symbolic",
    "symbolic link",
    "symlink"
  ],
  "license": "MIT",
  "main": "./dist/main.mjs",
  "module": "./dist/main.mjs",
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:nujarum/mklnks",
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf .cache bin dist test/.tmp types",
    "lint": "eslint . --cache --cache-file .cache/.eslintcache",
    "test": "concurrently -c auto npm:lint npm:vitest",
    "vitest": "vitest run --coverage --dir ./test"
  },
  "type": "module",
  "types": "./types/main.d.mts",
  "volta": {
    "node": "18.17.1"
  }
}
